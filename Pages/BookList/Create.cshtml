@page
@model Bezaleel_Bagoes_A_A_fdtest.Pages.BookList.CreateModel
@{
    ViewData["Title"] = "Add a Book";
}

<div class="book-container">
    <h2>➕ Add a Book</h2>

    <form method="post" class="book-form">
        <div class="form-group">
            <label asp-for="Input.Title">Title:</label>
            <input asp-for="Input.Title" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Input.Author">Author:</label>
            <input asp-for="Input.Author" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Input.Description">Description:</label>
            <textarea asp-for="Input.Description" class="form-control" rows="4"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="Input.ThumbnailUrl">Thumbnail URL:</label>
            <input asp-for="Input.ThumbnailUrl" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Input.Rating">Rating (0–5):</label>
            <input asp-for="Input.Rating" type="number" min="0" max="5" step="0.1" class="form-control" />
        </div>

        <button type="submit" class="btn-login">💾 Save</button>
        <a asp-page="/BookList/Index" class="form-links">← Back</a>
    </form>
</div>
