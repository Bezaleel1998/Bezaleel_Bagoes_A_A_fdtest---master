@page
@model Bezaleel_Bagoes_A_A_fdtest.Pages.Auth.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="login-container">
    <h2>📝 Register</h2>

    <form method="post" class="login-form">
        <div class="form-group">
            <label asp-for="Input.Name"></label>
            <input asp-for="Input.Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" type="email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" type="password" class="form-control" />
        </div>

        <button type="submit" class="btn-login">Register</button>
        <div class="form-links">
            <a asp-page="/Auth/Login">Already have an account?</a>
        </div>
    </form>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <p class="login-error">@Html.Raw(Model.Message)</p>
    }
</div>
